{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public", ".cache"]
}
